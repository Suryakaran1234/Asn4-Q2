<h1>Book List</h1>

<div class="row">
    {{#each books}}
    <div class="book column">
        <img src="{{this.img}}" alt="{{this.title}}" class="img">
        <h2>{{this.title}}</h2>
        <p>Author: {{this.author}}</p>
        <p>Inventory: {{this.inventory}}</p>
        <p>Category: {{this.category}}</p>
        <a href="/api/books/{{this._id}}">View Details</a>
        <form action="/api/books/{{this._id}}" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
            <input type="hidden" name="_method" value="DELETE"> <!-- Add this hidden field to simulate DELETE method -->
            <button type="submit">Delete</button>
        </form>
        </form>
    </div>
    {{/each}}
</div>
